{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "allowJs": false /* 是否允许js代码 */,
        "checkJs": false /* 检查js代码错误 */,
        "declaration": true /* 自动创建声明文件(.d.ts) */,
        "declarationDir": "dist/" /* 声明文件目录 */,
        "sourceMap": true /* 自动生成sourcemap文件 */,
        "esModuleInterop": true, /* 允许默认导出 */
        "outDir": "./dist" /* 编译输出目录 */,
        "rootDir": "./src" /* 项目源码根目录，用来控制编译输出的目录结构 */,
        "strict": true, /* 启用严格模式 */
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "./image.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "webpackConfig",
        "demo",
        "dist"
    ]
}